import turtle

turtle = turtle.Turtle()
turtle.color('red')

for _ in [1, 2, 3]:
    turtle.shape('circle')
    turtle.forward(50)
    turtle.right(120)
turtle.shape('turtle')
turtle.color('purple')
for _ in [1, 2]:
  turtle.forward(250)
  turtle.right(90)
turtle.forward(400)
turtle.right(90)
for _ in [1, 2]:
  turtle.forward(250)
  turtle.right(90)
