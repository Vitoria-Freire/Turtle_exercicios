import turtle

turtle = turtle.Turtle()
turtle.color('blue')
turtle.shape('circle')
turtle.forward(250)
turtle.left(90)
turtle.forward(250)
turtle.left(90)
turtle.forward(250)
turtle.left(90)
turtle.forward(250)
